@model IEnumerable<BarShowroom.Models.Beer>

@{
    ViewBag.Title = "BarShowroom";
}

<h2>@ViewBag.brewery beers:</h2>
<span>Showing @Model.Count() beers</span>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @Html.RouteLink("Show bars selling this brewery", "BreweryBars", new { breweryname = @ViewBag.brewery })
</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
             @Html.RouteLink(item.Name, "BeerBars", new { beername = item.Name })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
