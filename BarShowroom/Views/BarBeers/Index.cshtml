@model IEnumerable<BarShowroom.Models.Beer>

@{
    ViewBag.Title = "BarShowroom";
}

<h2>Beers selling at @ViewBag.bar:</h2>
Showing @Model.Count() beers 

<p>
    @Html.ActionLink("Create New Beer", "Create", "Beers")
</p>

<p>
    @Html.ActionLink("Add beer to this bar", "Create", new { barname = ViewBag.bar })
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
             @Html.RouteLink(item.Name, "BeerBars", new { beername = item.Name })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
